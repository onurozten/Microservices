@{
    ViewData["Title"] = "Home Page";
    var counter = 0;
}

@model List<CourseViewModel>

<h2>Kurslar</h2>
<hr />

@if (Model.Any())
{
    
    @foreach(var item in Model)
    {
        counter++;

        if(counter == 1 || counter % 3 == 1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'> ")
        }

        <div class="col">
            <div class="card h-100">
                <img src="@item.StockPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="badge bg-primary">
                        @item.Category.Name
                    </div>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price TL</h4>
                    <a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">Detay</a>
                </div>
            </div>
        </div>

        if (counter % 3 == 0)
        {
            @Html.Raw("</div")
        }
    }

}

